{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "typeRoots": ["./mobile-app/node_modules/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./mobile-app/node_modules/*", "./node_modules/*", "./backend/node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "mobile-app/**/*",
    "backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "mobile-app/node_modules",
    "backend/node_modules"
  ]
}
